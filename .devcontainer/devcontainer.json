{
	"name": "Existing Dockerfile",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile"
	},
	"runArgs": [
		"--gpus",
		"all",
		"--ipc=host",
		"--ulimit",
		"memlock=-1",
		"--ulimit",
		"stack=67108864"
	],
	"mounts":[],
	"customizations": {
		"vscode": {
			"settings": {
				"python.pythonPath": "/opt/conda/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"njpwerner.autodocstring",
				"ms-python.black-formatter",
				"tamasfe.even-better-toml",
				"ms-python.isort",
				"ms-python.pylint"
			]
		}
	},
	"remoteUser": "developer", 
	"postCreateCommand": "poetry config virtualenvs.options.system-site-packages true && poetry install --no-root --only=docker"
}